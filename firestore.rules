rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. User Root Profile
    match /users/{userId} {
      allow read: if true; 
      
      allow create, delete: if request.auth != null && (request.auth.uid == userId || (userId == "jok-eng-official" && request.auth.uid == "Hx4sxBjGaLST6c3MRWtrKn60c702"));
      
      allow update: if request.auth != null && (
          request.auth.uid == userId || 
          (userId == "jok-eng-official" && request.auth.uid == "Hx4sxBjGaLST6c3MRWtrKn60c702") ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalRemixesInspired']))
      );

      match /progress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /saved/{savedId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ðŸŸ¢ FORCE OPEN: Explicitly allow access to Official Scenarios to debug the Listener
    // This MUST come before the generic match to take precedence (or work alongside it)
    match /users/jok-eng-official/scenarios/{scenarioId} {
      allow read: if true;
      allow write: if request.auth != null; // Allow any auth user to write for debugging
    }

    match /users/{userId}/scenarios/{scenarioId} {
      allow write: if request.auth != null && (request.auth.uid == userId || (userId == "jok-eng-official" && request.auth.uid == "Hx4sxBjGaLST6c3MRWtrKn60c702"));
      
      // Generic Read Logic
      allow read: if (request.auth != null && request.auth.uid == userId) 
                  || (resource != null && resource.data.isPublic == true);
      
      allow update: if request.auth != null && resource.data.isPublic == true;
    }
    
    match /{path=**}/scenarios/{scenarioId} {
      allow read: if (resource != null && resource.data.isPublic == true) || (request.auth != null && resource.data.userId == request.auth.uid);
    }
  }
}
