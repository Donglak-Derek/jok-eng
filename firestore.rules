rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // üõ°Ô∏è AI CONTENT ENGINE: Video Lessons (High Priority)
    match /video_lessons/{lessonId} {
      allow read: if true;
      allow write: if request.auth != null; 
    }

    // 1. User Root Profile
    match /users/{userId} {
      allow read: if true; 
      
      allow create, delete: if request.auth != null && (request.auth.uid == userId || (userId == "jok-eng-official" && request.auth.uid == "Hx4sxBjGaLST6c3MRWtrKn60c702"));
      
      allow update: if request.auth != null && (
          request.auth.uid == userId || 
          (userId == "jok-eng-official" && request.auth.uid == "Hx4sxBjGaLST6c3MRWtrKn60c702") ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalRemixesInspired']))
      );

      match /progress/{progressId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /saved/{savedId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // üü¢ Public Scenarios & Collection Groups
    match /{path=**}/scenarios/{scenarioId} {
      allow read: if (resource != null && resource.data.isPublic == true) || (request.auth != null && resource.data.userId == request.auth.uid);
      allow write: if request.auth != null && (request.auth.uid == request.resource.data.userId || (request.resource.data.userId == "jok-eng-official" && request.auth.uid == "Hx4sxBjGaLST6c3MRWtrKn60c702"));
    }

    // Specific match for official scenarios to be safe
    match /users/jok-eng-official/scenarios/{scenarioId} {
      allow read: if true;
    }
  }
}
